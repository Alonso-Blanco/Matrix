{% extends '::base.html.twig' %}

{% block body -%}
    <h1 class="header-list">Lista de Usuario</h1>

    <table class="table-list table records_list">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Contraseña</th>
                <th>Rol</th>
                <th>Nombre Completo</th>
                <th>Cédula</th>
                <th>Carne</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>                
                <td>{{ entity.usuario }}</td>
                <td>{{ entity.contrasena }}</td>
                <td>{{ entity.rol }}</td>
                <td>{{ entity.nombrecompleto }}</td>
                <td>{{ entity.cedula }}</td>
                <td>{{ entity.carne }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.direccion }}</td>
                <td>
                <ul class="acciones-tb">
                    <li class="list-tb">
                        <a href="{{ path('usuario_show', { 'id': entity.id }) }}"><button class="btn btn-default">Ver</button></a>
                    </li>
                    <li class="list-tb">
                        <a href="{{ path('usuario_edit', { 'id': entity.id }) }}"><button class="btn btn-default">Editar</button></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li class="list-tb">
            <a href="{{ path('usuario_new') }}"><button class="button-new btn btn-primary">Crear nuevo Curso</button></a>
        </li>
    </ul>
    {% endblock %}
