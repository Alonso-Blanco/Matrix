{% extends 'base.html.twig' %}

{% block body %}
<div id="login" class="container">
	{% if (app.session.get('login') == '' )   %}
      <form class="form-signin" method="POST" action="{{ url('usuario_login')}}">
        <h2 id="header-lg">Autentificación</h2>
        <label for="user_login" class="sr-only">Número de Cédula</label>
        <input type="text" name="cedula" id="input-lg" class="form-control" placeholder="Número de Cédula" required autofocus>    
        <label for "contrasena" class="sr-only">Contraseña</label>
	    <input type ="password" name ="contrasena" id="input-lg" class="form-control" placeholder="Contraseña" required/>     
       	<button id="botton-lg" class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
      </form>  
    {%  endif %}
</div>
{% endblock %}